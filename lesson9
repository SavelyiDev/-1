from flask import Flask
import random
#—Å–æ–∑–¥–∞–µ–º –ø—Ä–∏–ª–æ–∂–µ–Ω–∏–µ
app = Flask(__name__)
# –æ–±—Ä–∞–±–æ—Ç—á–∏–∫ –º–∞—Ä—à—Ä—É—Ç–∞

menu='''
<a href="../randfact/">–ü–æ—Å–º–æ—Ç—Ä–µ—Ç—å —Å–ª—É—á–∞–π–Ω—ã–π —Ñ–∞–∫—Ç!</a>
<a href="../mem/">–ü–æ—Å–º–æ—Ç—Ä–µ—Ç—å mem!</a>
<a href="../">–ü–æ—Å–º–æ—Ç—Ä–µ—Ç—å —Å–ª—É—á–∞–π–Ω—ã–π —Ñ–∞–∫—Ç!</a>
'''

facts_list=[
"–ë–æ–ª—å—à–∏–Ω—Å—Ç–≤–æ –ª—é–¥–µ–π, —Å—Ç—Ä–∞–¥–∞—é—â–∏—Ö —Ç–µ—Ö–Ω–æ–ª–æ–≥–∏—á–µ—Å–∫–æ–π –∑–∞–≤–∏—Å–∏–º–æ—Å—Ç—å—é, –∏—Å–ø—ã—Ç—ã–≤–∞—é—Ç —Å–∏–ª—å–Ω—ã–π —Å—Ç—Ä–µ—Å—Å, –∫–æ–≥–¥–∞ –æ–Ω–∏ –Ω–∞—Ö–æ–¥—è—Ç—Å—è –≤–Ω–µ –∑–æ–Ω—ã –ø–æ–∫—Ä—ã—Ç–∏—è —Å–µ—Ç–∏ –∏–ª–∏ –Ω–µ –º–æ–≥—É—Ç –∏—Å–ø–æ–ª—å–∑–æ–≤–∞—Ç—å —Å–≤–æ–∏ —É—Å—Ç—Ä–æ–π—Å—Ç–≤–∞.",
             
'–°–æ–≥–ª–∞—Å–Ω–æ –∏—Å—Å–ª–µ–¥–æ–≤–∞–Ω–∏—é, –ø—Ä–æ–≤–µ–¥–µ–Ω–Ω–æ–º—É –≤ 2018 –≥–æ–¥—É, –±–æ–ª–µ–µ 50% –ª—é–¥–µ–π –≤ –≤–æ–∑—Ä–∞—Å—Ç–µ –æ—Ç 18 –¥–æ 34 –ª–µ—Ç —Å—á–∏—Ç–∞—é—Ç —Å–µ–±—è –∑–∞–≤–∏—Å–∏–º—ã–º–∏ –æ—Ç —Å–≤–æ–∏—Ö —Å–º–∞—Ä—Ç—Ñ–æ–Ω–æ–≤.',

'–ò–∑—É—á–µ–Ω–∏–µ —Ç–µ—Ö–Ω–æ–ª–æ–≥–∏—á–µ—Å–∫–æ–π –∑–∞–≤–∏—Å–∏–º–æ—Å—Ç–∏ —è–≤–ª—è–µ—Ç—Å—è –æ–¥–Ω–æ–π –∏–∑ –Ω–∞–∏–±–æ–ª–µ–µ –∞–∫—Ç—É–∞–ª—å–Ω—ã—Ö –æ–±–ª–∞—Å—Ç–µ–π –Ω–∞—É—á–Ω—ã—Ö –∏—Å—Å–ª–µ–¥–æ–≤–∞–Ω–∏–π –≤ –Ω–∞—Å—Ç–æ—è—â–µ–µ –≤—Ä–µ–º—è.',
'–°–æ–≥–ª–∞—Å–Ω–æ –∏—Å—Å–ª–µ–¥–æ–≤–∞–Ω–∏—é, –ø—Ä–æ–≤–µ–¥–µ–Ω–Ω–æ–º—É –≤ 2019 –≥–æ–¥—É, –±–æ–ª–µ–µ 60% –ª—é–¥–µ–π –æ—Ç–≤–µ—á–∞—é—Ç –Ω–∞ —Ä–∞–±–æ—á–∏–µ —Å–æ–æ–±—â–µ–Ω–∏—è –≤ —Å–≤–æ–∏—Ö —Å–º–∞—Ä—Ç—Ñ–æ–Ω–∞—Ö –≤ —Ç–µ—á–µ–Ω–∏–µ 15 –º–∏–Ω—É—Ç –ø–æ—Å–ª–µ —Ç–æ–≥–æ, –∫–∞–∫ –æ–Ω–∏ –≤—ã—à–ª–∏ —Å —Ä–∞–±–æ—Ç—ã.',

'–û–¥–∏–Ω –∏–∑ —Å–ø–æ—Å–æ–±–æ–≤ –±–æ—Ä—å–±—ã —Å —Ç–µ—Ö–Ω–æ–ª–æ–≥–∏—á–µ—Å–∫–æ–π –∑–∞–≤–∏—Å–∏–º–æ—Å—Ç—å—é - —ç—Ç–æ –ø–æ–∏—Å–∫ –∑–∞–Ω—è—Ç–∏–π, –∫–æ—Ç–æ—Ä—ã–µ –ø—Ä–∏–Ω–æ—Å—è—Ç —É–¥–æ–≤–æ–ª—å—Å—Ç–≤–∏–µ –∏ —É–ª—É—á—à–∞—é—Ç –Ω–∞—Å—Ç—Ä–æ–µ–Ω–∏–µ.']
@app.route("/randfact/")
def randomfact():
    return f'<p>{random.choice(facts_list)}</p>'+menu

@app.route("/")
def hello_world():
    return '<h1>Hello, World!üéà</h1>'+menu
@app.route("/mem/")
def show_mem():
    return '<img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRQAwKAko-tw7B_A6cpPmPCJHgngy4AKdg4Ww&s">'+menu

app.run(debug=True)
